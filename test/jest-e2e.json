{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^@app/(.*)": "<rootDir>/../src/$1",
    "^@core/(.*)": "<rootDir>/../src/core/$1",
    "^@database/(.*)": "<rootDir>/../src/core/database/$1",
    "^config/(.*)": "<rootDir>/../config/$1"
  }
}
